<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <t3h.com.musicbolero.customview.SquareLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="12dp"
            app:cardCornerRadius="8dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/root_song"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_tenbaihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="Đừng quên tên anh" />

                    <TextView
                        android:id="@+id/txt_casy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="Đừng quên tên anh" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom">

                    <ImageView
                        android:id="@+id/img_hinhbaihat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/img_ic_plays"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_play_ss" />

                    <TextView
                        android:id="@+id/txt_luotnghe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="32k"
                        android:textColor="@color/mauXam" />

                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </t3h.com.musicbolero.customview.SquareLinearLayout>
</layout>